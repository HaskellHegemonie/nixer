  # Enable the X11 windowing system.
  environment = {
    shellAliases = {
      doas = "sudo";
    };
    systemPackages = with pkgs; [
      emacs
      vim
      git
    ];
  };

  services = {
    xserver = {
      enable = false;

      xkb = {
        layout = "us";
        variant = "dvp";
      };
    };
  };


  programs = {
    zsh = {
      enable = true;
    };
  };
  users = {
    defaultUserShell = pkgs.zsh;
    extraUsers = {
      hoskellisiera = {
        isNormalUser = true;
        extraGroups = [ "wheel" ];
        password = "haskell";
        shell = pkgs.zsh;
      };
    };
  };
